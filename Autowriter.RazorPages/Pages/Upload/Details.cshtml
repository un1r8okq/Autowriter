@page
@using System.Globalization
@model Details

@{
    ViewData["Title"] = "AutoWriter | Upload";
    var created = @Model.Data.Created.ToLocalTime();
}

<div>
    <h1>Source material detail</h1>
    <form method="post">
            <div>
                <p>Uploaded on @created.ToString("dddd, d MMMM yyyy") at @created.ToString("H:mm tt") <input type="submit" value="Delete"></p>
            </div>
            <textarea name="content">@Model.Data.Content</textarea>
    </form>
</div>
