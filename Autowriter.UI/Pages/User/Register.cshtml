@page
@{
    ViewData["Title"] = "AutoWriter | Register";
}
@model Register

<h1>Please register</h1>
<form method="post">
    <div>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" autofocus />
        <span class="red" asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" />
        <span class="red" asp-validation-for="Password"></span>
    </div>
    <input type="submit" value="Register" />
</form>

@if(Model.Errors.Any())
{
    <h1>Error creating user:</h1>
    foreach (var error in Model.Errors)
    {
        @error
    }
}
